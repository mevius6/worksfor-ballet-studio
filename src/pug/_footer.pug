mixin contactWidget(props)
  - let { contactsList=[], socialsList=[] } = props
  aside.widget.flow.mask-border-gradient(data-backdrop="glassy")
    if !isArrEmpty(socialsList)
      +list({ class: 'social',
              items: social,
              ordered: false })
    if !isArrEmpty(contactsList)
      +list({ class: 'contacts',
              items: contactsList,
              ordered: false })

+contactWidget({ contactsList: contacts, socialsList: social })

