extends page

block vars
  - let page = data.pages.syllabus
  -
    const msg = 'Your browser does not support CSS container queries. Please open this page in Chrome Canary with the experimental #enable-container-queries flag turned on.'

block content
  .grid
    h1.title.grid__content(data-hidden)
      | Программа обучения
    //- p.warning.grid__center
      | #[strong Warning:]
      = msg

    .container.spaced.--ada-md
      .grid__content
        +head({ level: 2, text: 'Студия на Скаковой', split: 'chars' })
      .grid__full
        +calendar({ schedule: central })

    .container.spaced.--ada-md
      .grid__content
        +head({ level: 2, text: 'Студия на Вернадского', split: 'chars' })
      .grid__full
        +calendar({ schedule: balance })

    .container.spaced.--ada-md
      .grid__content
        +head({ level: 2, text: 'Студия в деревне Николо-Хованское', split: 'chars' })
      .grid__full
        +calendar({ schedule: village })

    .container#locate
      .grid__content
        +head({ level: 2, text: 'Как добраться', split: 'chars' })
      .grid__full
        +map({})

    .container.spaced.--ada-md#contact
      .grid__center: +head({ level: 2, text: 'Пишите нам', split: 'chars' })
      +form({
        class: 'grid__center',
        endpoint: '294b2d20',
        phone: data.meta.phone,
        recaptcha: true,
      })

block scripts
